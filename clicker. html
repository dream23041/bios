        }

        .achievements h2 {
            text-align: center;
            margin-bottom: 15px;
        }

        .achievement-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
        }

        .achievement {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            opacity: 0.5;
