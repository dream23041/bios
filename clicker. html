    <script>
        // Игровые переменные
        let coins = parseInt(localStorage.getItem('coins')) || 0;
        let totalClicks = parseInt(localStorage.getItem('totalClicks')) || 0;
        let coinsPerSecond = parseInt(localStorage.getItem('coinsPerSecond')) || 0;
        
        // Улучшения
        let clickPower = parseInt(localStorage.getItem('clickPower')) || 1;
        let clickPowerLevel = parseInt(localStorage.getItem('clickPowerLevel')) || 1;
        let clickPowerCost = parseInt(localStorage.getItem('clickPowerCost')) || 10;
        
        let clickCooldown = parseInt(localStorage.getItem('clickCooldown')) || 1000;
        let clickCooldownLevel = parseInt(localStorage.getItem('clickCooldownLevel')) || 1;
        let clickCooldownCost = parseInt(localStorage.getItem('clickCooldownCost')) || 25;
        
        let basicAutoClickers = parseInt(localStorage.getItem('basicAutoClickers')) || 0;
        let basicAutoClickerCost = parseInt(localStorage.getItem('basicAutoClickerCost')) || 50;
        
        let advancedAutoClickers = parseInt(localStorage.getItem('advancedAutoClickers')) || 0;
        let advancedAutoClickerCost = parseInt(localStorage.getItem('advancedAutoClickerCost')) || 250;
        
        // Достижения
        const achievements = {
            '100-clicks': localStorage.getItem('achievement-100-clicks') === 'true',
            '1000-coins': localStorage.getItem('achievement-1000-coins') === 'true',
            'first-upgrade': localStorage.getItem('achievement-first-upgrade') === 'true',
            'auto-clicker': localStorage.getItem('achievement-auto-clicker') === 'true'
        };
        
        // Состояние кнопки
        let isClickButtonEnabled = true;
        
        // Создание частиц
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                const size = Math.random() * 10 + 5;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                particle.style.animationDuration = `${Math.random() * 20 + 10}s`;
                particle.style.animationDelay = `${Math.random() * 5}s`;
                particle.style.opacity = Math.random() * 0.5 + 0.2;
                
                particlesContainer.appendChild(particle);
            }
        }
        
        // Переключение темы
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = themeToggle.querySelector('i');
        
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-theme');
            
            if (document.body.classList.contains('dark-theme')) {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            } else {
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
            }
            
            localStorage.setItem('theme', document.body.classList.contains('dark-theme') ? 'dark' : 'light');
        });
        
        // Загрузка сохраненной темы
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            document.body.classList.add('dark-theme');
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        }
        
        // Обновление интерфейса
        function updateUI() {
            document.getElementById('coins').textContent = coins;
            document.getElementById('coinCount').textContent = coins;
            document.getElementById('coinsPerSecond').textContent = coinsPerSecond;
            document.getElementById('totalClicks').textContent = totalClicks;
            document.getElementById('clickPower').textContent = clickPower;
            
            document.getElementById('clickPowerLevel').textContent = clickPowerLevel;
            document.getElementById('clickPowerCost').textContent = clickPowerCost;
            
            document.getElementById('clickCooldownLevel').textContent = clickCooldownLevel;
            document.getElementById('clickCooldownCost').textContent = clickCooldownCost;
            
            document.getElementById('basicAutoClickerCount').textContent = basicAutoClickers;
            document.getElementById('basicAutoClickerLevel').textContent = basicAutoClickers;
            document.getElementById('basicAutoClickerCost').textContent = basicAutoClickerCost;
            
            document.getElementById('advancedAutoClickerCount').textContent = advancedAutoClickers;
            document.getElementById('advancedAutoClickerLevel').textContent = advancedAutoClickers;
            document.getElementById('advancedAutoClickerCost').textContent = advancedAutoClickerCost;
            
            // Обновление состояний кнопок
            document.getElementById('buyClickPower').disabled = coins < clickPowerCost;
            document.getElementById('buyClickCooldown').disabled = coins < clickCooldownCost;
            document.getElementById('buyBasicAutoClicker').disabled = coins < basicAutoClickerCost;
            document.getElementById('buyAdvancedAutoClicker').disabled = coins < advancedAutoClickerCost;
            
            // Обновление достижений
            updateAchievements();
        }
        
        // Обработчик клика
        const clickButton = document.getElementById('clickButton');
        
        clickButton.addEventListener('click', function() {
            if (!isClickButtonEnabled) return;
            
            // Добавление монет
            coins += clickPower;
            totalClicks++;
            
            // Создание плавающей монеты
            createFloatingCoin(clickPower);
            
            // Сохранение и обновление
            saveGame();
            updateUI();
            checkAchievements();
            
            // Кулдаун
            isClickButtonEnabled = false;
            clickButton.classList.add('disabled');
            
            setTimeout(() => {
                isClickButtonEnabled = true;
                clickButton.classList.remove('disabled');
            }, clickCooldown);
        });
        
        // Создание плавающей монеты
        function createFloatingCoin(value) {
            const coin = document.createElement('div');
            coin.classList.add('floating-coin');
            coin.textContent = `+${value}`;
            coin.style.left = `${Math.random() * 80 + 10}%`;
            coin.style.top = `70%`;
            
            document.body.appendChild(coin);
            
            setTimeout(() => {
                coin.remove();
            }, 1000);
        }
        
        // Покупка улучшений
        document.getElementById('buyClickPower').addEventListener('click', function() {
            if (coins < clickPowerCost) return;
            
            coins -= clickPowerCost;
            clickPower += 1;
            clickPowerLevel++;
            clickPowerCost = Math.floor(clickPowerCost * 1.5);
            
            saveGame();
            updateUI();
            checkAchievements();
        });
        
        document.getElementById('buyClickCooldown').addEventListener('click', function() {
            if (coins < clickCooldownCost) return;
            
            coins -= clickCooldownCost;
            clickCooldown = Math.max(100, clickCooldown - 100);
            clickCooldownLevel++;
            clickCooldownCost = Math.floor(clickCooldownCost * 1.5);
            
            saveGame();
            updateUI();
            checkAchievements();
        });
        
        document.getElementById('buyBasicAutoClicker').addEventListener('click', function() {
            if (coins < basicAutoClickerCost) return;
            
            coins -= basicAutoClickerCost;
            basicAutoClickers++;
            basicAutoClickerCost = Math.floor(basicAutoClickerCost * 1.3);
            
            // Пересчет монет в секунду
            coinsPerSecond = basicAutoClickers + (advancedAutoClickers * 5);
            
            saveGame();
            updateUI();
            checkAchievements();
        });
        
        document.getElementById('buyAdvancedAutoClicker').addEventListener('click', function() {
            if (coins < advancedAutoClickerCost) return;
            
            coins -= advancedAutoClickerCost;
            advancedAutoClickers++;
            advancedAutoClickerCost = Math.floor(advancedAutoClickerCost * 1.3);
            
            // Пересчет монет в секунду
            coinsPerSecond = basicAutoClickers + (advancedAutoClickers * 5);
            
            saveGame();
            updateUI();
            checkAchievements();
        });
        
        // Автоматическое начисление монет
        function autoCollectCoins() {
            if (coinsPerSecond > 0) {
                coins += coinsPerSecond;
                saveGame();
                updateUI();
                checkAchievements();
            }
        }
        
        // Проверка достижений
        function checkAchievements() {
            // 100 кликов
            if (totalClicks >= 100 && !achievements['100-clicks']) {
                achievements['100-clicks'] = true;
                localStorage.setItem('achievement-100-clicks', 'true');
                coins += 100; // Награда
            }
            
            // 1000 монет
            if (coins >= 1000 && !achievements['1000-coins']) {
                achievements['1000-coins'] = true;
                localStorage.setItem('achievement-1000-coins', 'true');
                coins += 500; // Награда
            }
            
            // Первое улучшение
            if ((clickPowerLevel > 1 || clickCooldownLevel > 1) && !achievements['first-upgrade']) {
                achievements['first-upgrade'] = true;
                localStorage.setItem('achievement-first-upgrade', 'true');
                coins += 50; // Награда
            }
            
            // Первый авто-кликер
            if ((basicAutoClickers > 0 || advancedAutoClickers > 0) && !achievements['auto-clicker']) {
                achievements['auto-clicker'] = true;
                localStorage.setItem('achievement-auto-clicker', 'true');
                coins += 100; // Награда
            }
        }
        
        // Обновление отображения достижений
        function updateAchievements() {
            for (const achievement in achievements) {
                const element = document.getElementById(`achievement-${achievement}`);
                if (element) {
                    if (achievements[achievement]) {
                        element.classList.add('unlocked');
                    } else {
                        element.classList.remove('unlocked');
                    }
                }
            }
        }
        
        // Сохранение игры
        function saveGame() {
            localStorage.setItem('coins', coins);
            localStorage.setItem('totalClicks', totalClicks);
            localStorage.setItem('coinsPerSecond', coinsPerSecond);
            
            localStorage.setItem('clickPower', clickPower);
            localStorage.setItem('clickPowerLevel', clickPowerLevel);
            localStorage.setItem('clickPowerCost', clickPowerCost);
            
            localStorage.setItem('clickCooldown', clickCooldown);
            localStorage.setItem('clickCooldownLevel', clickCooldownLevel);
            localStorage.setItem('clickCooldownCost', clickCooldownCost);
            
            localStorage.setItem('basicAutoClickers', basicAutoClickers);
            localStorage.setItem('basicAutoClickerCost', basicAutoClickerCost);
            
            localStorage.setItem('advancedAutoClickers', advancedAutoClickers);
            localStorage.setItem('advancedAutoClickerCost', advancedAutoClickerCost);
        }
        
        // Инициализация игры
        function initGame() {
            createParticles();
            updateUI();
            updateAchievements();
            
            // Запуск авто-сбора
            setInterval(autoCollectCoins, 1000);
        }
        
        // Запуск игры
        initGame();
    </script>
</body>
</html>
